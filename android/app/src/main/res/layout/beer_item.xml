<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    app:cardCornerRadius="8dp"
                                    app:cardUseCompatPadding="true"
                                    app:cardBackgroundColor="@color/md_blue_100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/iv_beer_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:contentDescription="@string/iv_picture"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/tv_name_beer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/iv_beer_image"
            android:layout_marginStart="115dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_beer"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_name_beer"
            android:layout_alignStart="@+id/iv_beer_image"
            android:layout_centerVertical="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_style"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_alcohol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/tv_name_beer"
            android:layout_toEndOf="@+id/tv_style"
            android:text="@string/tv_alcohol"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_brewery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_style"
            android:layout_alignStart="@+id/iv_beer_image"
            android:layout_centerVertical="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_brewery"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_style"
            android:layout_toEndOf="@+id/tv_brewery"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="@string/tv_country"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold" />



    </RelativeLayout>

</android.support.v7.widget.CardView>